<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/tabledetailslayout"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cusnamelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer : "
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/ongoingOrderCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Galiver "
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cusorderlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order : "
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/ongoingOrderOderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4395 "
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cuswaiterlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiter: "
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faiaz Siraj "
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:id="@+id/ongoingOrderWaiterName"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 "
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:id="@+id/RunningTime"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>